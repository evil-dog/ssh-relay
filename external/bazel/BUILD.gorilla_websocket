load("@io_bazel_rules_go//go:def.bzl", "go_library", "go_test")

go_library(
    name = "websocket",
    srcs = glob(
        ["*.go"],
        exclude = glob(["*_test.go"]),
    ),
    importpath = "github.com/gorilla/websocket",
    visibility = ["//visibility:public"],
)

go_test(
    name = "websocket_test",
    srcs = glob(["*_test.go"]),
    embed = [":websocket"],
)
