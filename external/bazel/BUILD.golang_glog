package(default_visibility = ["//visibility:public"])

load("@io_bazel_rules_go//go:def.bzl", "go_library", "go_test")

go_library(
    name = "glog",
    srcs = glob(
        ["*.go"],
        exclude = ["*_test.go"],
    ),
    importpath = "github.com/golang/glog",
    visibility = ["//visibility:public"],
)

go_test(
    name = "glog_test",
    srcs = glob(["*_test.go"]),
    embed = [":glog"],
)
